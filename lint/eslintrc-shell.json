{
    "rules": {
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": "error"
    },

    "overrides": [
        {
            "files": "js/**",
            "excludedFiles": ["js/extensionPrefs/*", "js/portalHelper/*"],
            "globals": {
                "global": false,
                "_": false,
                "C_": false,
                "N_": false,
                "ngettext": false
            }
        }
    ]
}
